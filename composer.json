{
    "name": "papi-ai/papi-core",
    "description": "PHP AI Agents Workflow Automation - Core Library",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/papi-ai/papi-core",
    "keywords": [
        "workflow",
        "automation",
        "ai",
        "agents",
        "integration",
        "php"
    ],
    "authors": [
        {
            "name": "Marcello Duarte",
            "email": "marcello.duarte@gmail.com",
            "homepage": "https://github.com/MarcelloDuarte"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpspec/prophecy": "^1.22",
        "phpspec/prophecy-phpunit": "^2.4",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Papi\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Papi\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src tests",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "quality": [
            "@test",
            "@analyze",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
